<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>הרשמה</title>
  <link rel="stylesheet" href="/style.css">
  <style>
    body.auth-luxe{
      background:
        radial-gradient(1200px 600px at 100% -10%, #f3f4f6 20%, transparent 70%),
        radial-gradient(900px 500px at -10% 100%, #eef2ff 10%, transparent 60%),
        #ffffff;
    }
    .auth-luxe .page{
      min-height:100svh;
      display:flex; align-items:center; justify-content:center;
      padding:24px;
    }
    .auth-luxe .card{
      width:100%; max-width:560px;
      padding:28px 28px;
      border-radius:20px;
      border:1px solid #e5e7eb;
      box-shadow:0 10px 30px rgba(0,0,0,.08);
      background:#fff;
    }
    .auth-luxe h1{ margin-top:0; margin-bottom:14px; }
    .auth-luxe form > div{ margin-bottom:12px; }
    .auth-luxe input[type="email"],
    .auth-luxe input[type="password"],
    .auth-luxe input[type="tel"],
    .auth-luxe input[type="text"]{
      width:100%; box-sizing:border-box;
    }
    .auth-luxe .actions{ display:flex; gap:8px; flex-wrap:wrap; }
  </style>
</head>
<body class="auth-luxe">
  <div class="page">
    <div class="card">
      <h1>הרשמה</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <p class="error"><%= error %></p>
      <% } %>

      <form method="post" action="/register" autocomplete="on">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div>
          <label>אימייל</label><br>
          <input name="email" type="email" required>
        </div>

        <div>
          <label>סיסמה (מינימום 6 תווים)</label><br>
          <input name="password" type="password" required minlength="6">
        </div>

        <div>
          <label>שם פרטי</label><br>
          <input name="first_name" type="text">
        </div>

        <div>
          <label>שם משפחה</label><br>
          <input name="last_name" type="text">
        </div>

        <div>
          <label>טלפון (הקלד בלי ‎+972, לדוגמה: 0521234567)</label><br>
          <input name="phone" type="tel" placeholder="0521234567" inputmode="tel">
        </div>

        <div class="actions" style="margin-top:6px">
          <button class="badge" type="submit">צור חשבון</button>
          <a class="badge" href="/login">כבר יש לך חשבון?</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
