<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>הרשמה</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="page">
    <div class="card">
      <h1>הרשמה</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <p class="error"><%= error %></p>
      <% } %>

      <form method="post" action="/register" autocomplete="on">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">

        <div>
          <label>אימייל</label><br>
          <input name="email" type="email" required>
        </div>

        <div>
          <label>סיסמה (מינימום 6 תווים)</label><br>
          <input name="password" type="password" required minlength="6">
        </div>

        <div>
          <label>שם פרטי</label><br>
          <input name="first_name" type="text">
        </div>

        <div>
          <label>שם משפחה</label><br>
          <input name="last_name" type="text">
        </div>

        <div>
          <label>טלפון (הקלד בלי ‎+972, לדוגמה: 0521234567)</label><br>
          <input name="phone" type="tel" placeholder="0521234567" inputmode="tel">
        </div>

        <div style="margin-top:10px">
          <button class="badge" type="submit">צור חשבון</button>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
