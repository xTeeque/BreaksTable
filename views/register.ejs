<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>הרשמה</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="card">
    <h1>הרשמה</h1>
    <% if (error) { %><p class="error"><%= error %></p><% } %>
    <form method="post" action="/register" autocomplete="on">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div><label>שם פרטי</label><br><input name="first_name" required></div>
      <div><label>שם משפחה</label><br><input name="last_name" required></div>
      <div><label>אימייל</label><br><input name="email" type="email" required></div>
      <div><label>סיסמה</label><br><input name="password" type="password" required minlength="6"></div>
      <div><label>אישור סיסמה</label><br><input name="confirm" type="password" required minlength="6"></div>
      <button type="submit">הרשם</button>
    </form>
    <p><a href="/login">יש לך משתמש? התחבר</a></p>
  </div>
</body>
</html>
