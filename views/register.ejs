<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>הרשמה</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body class="page-center">
  <div class="card">
    <h1>הרשמה</h1>

    <% if (typeof error !== 'undefined' && error) { %>
      <p class="error"><%= error %></p>
    <% } %>

    <form method="post" action="/register" autocomplete="on">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">

      <div>
        <label>שם פרטי</label><br>
        <input name="first_name" type="text" autocomplete="given-name">
      </div>

      <div>
        <label>שם משפחה</label><br>
        <input name="last_name" type="text" autocomplete="family-name">
      </div>

      <div>
        <label>אימייל</label><br>
        <input name="email" type="email" required autocomplete="email">
      </div>

      <div>
        <label>סיסמה</label><br>
        <input name="password" type="password" required minlength="6" autocomplete="new-password">
      </div>

      <button type="submit">צור חשבון</button>
    </form>

    <p style="margin-top:10px">
      יש לך חשבון? <a href="/login">התחבר</a>
    </p>
  </div>
</body>
</html>
