<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>איפוס סיסמה</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="page">
    <div class="card">
      <h1>בחירת סיסמה חדשה</h1>

      <% if (typeof error !== 'undefined' && error) { %>
        <p class="error"><%= error %></p>
      <% } %>

      <form method="post" action="/reset/<%= token %>">
        <input type="hidden" name="_csrf" value="<%= csrfToken %>">
        <div>
          <label>סיסמה חדשה (לפחות 6 תווים)</label><br>
          <input name="password" type="password" minlength="6" required>
        </div>
        <div style="margin-top:10px">
          <button class="badge" type="submit">אפס סיסמה</button>
          <a class="badge" href="/login" style="margin-inline-start:6px">חזרה להתחברות</a>
        </div>
      </form>
    </div>
  </div>
</body>
</html>
