<!doctype html>
<html lang="he" dir="rtl">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>התחברות</title>
  <link rel="stylesheet" href="/style.css">
</head>
<body>
  <div class="card">
    <h1>התחברות</h1>
    <% if (error) { %><p class="error"><%= error %></p><% } %>
    <form method="post" action="/login" autocomplete="on">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div><label>אימייל</label><br><input name="email" type="email" required></div>
      <div><label>סיסמה</label><br><input name="password" type="password" required minlength="6"></div>
      <button type="submit">התחבר</button>
    </form>
    <p><a href="/forgot">שכחתי סיסמה</a> · <a href="/register">הרשמה</a></p>
  </div>
</body>
</html>
